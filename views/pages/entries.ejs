<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<%- include('categoryNavBar') %>
<div class="text-center">
    <h1 class="text-2xl font-bold">Entries</h1>
</div>

<% if (success.length > 0) { %>
    <div class="alert alert-success"><%= success %></div>
<% } %>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <th>Label</th>
        <th>Query</th>
        <th><a href="/categories/<%= category.slug %>/showCreateEntry" class="btn btn-sm btn-primary">New</a></th>
    </thead>
    <tbody>

        <% for (var entry of category.entries) { %>
            <tr>
                <td>
                    <%= entry.label %>
                </td>
                <td>
                    <%= entry.apiQuery %>
                </td>
                <td>
                    <a href="/categories/<%= category.slug %>/<%= entry._id%>/showEdit" class="btn btn-sm btn-primary">Edit</a>
                    <a href="/categories/<%= category.slug %>/<%= entry._id%>/delete" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        <% } %>

    </tbody>
</table>