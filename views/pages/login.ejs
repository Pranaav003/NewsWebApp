<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<script type="text/javascript" src="/javascript/loginValidation.js"></script>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4 mt-3">
        <h1>Login Portal</h1>

        <form class="mt-3" action="/login" id="login" method="POST" onsubmit="return validateLogin(this);">
            <div class="mb-3">
                <label for="username" class="form-label">User Name</label>
                <input name="username" type="text" class="form-control" id="username">
                <div id="error1" class="form-text" style="color:red" hidden="true">Username is required.</div>
            </div>
            
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" type="password" class="form-control">
                <div id="error2" class="form-text" style="color:red" hidden="true">Password is required.</div>
            </div>
            <button type="submit" class="btn btn-primary">Log In</button>
            <a href="/showSignUp" class="btn btn-primary">Sign Up</a>
        </form>
        </div>
    </div>
    </div>